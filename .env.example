PORT=3000
NODE_ENV=development

# ============================
# DATABASE CONFIG (PostgreSQL)
# ============================
POSTGRES_USER=rag_enterprise_user
POSTGRES_PASSWORD=rag_enterprise_pass
POSTGRES_DB=rag_enterprise_db
POSTGRES_PORT=5432

# Prisma/NestJS connection string
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# ============================
# JWT CONFIG
# ============================
# Generate secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-token-key-at-least-32-chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-at-least-32-chars
JWT_REFRESH_EXPIRES=7d


AWS_REGION=
AWS_S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=


